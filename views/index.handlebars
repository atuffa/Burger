<div class="row">
            <!-- left side -->
            <center>
                <div class="col-md-6">
                    <h3>Ready to eat!</h3>

                    <!-- Dynamically Insert Ready Burgers Here -->
                    {{#each burgers}}
                        {{#unless devoured}}
                         <form >
                            <div class="input-group ">

                                <li class ="form-control">
                                    {{this.id}}. {{this.burger}}
                                </li>

                                {{!-- Devour Button --}}
                                <span class="input-group-btn">
                                    <button class="btn btn-success devour-button" data-id = "{{this.id}}">Devour It!</button>
                                </span>

                                {{!-- Delete Button --}}
                                <span class="input-group-btn">
                                    <button class="btn btn-danger undevour-button" data-id = "{{this.id}}">X</button>
                                </span>
                            </div>
                        </form>
                        {{/unless}}
                    {{/each}}
                </div>
            
            </center>
            
            <center>
            <!-- right side -->
            <div class="col-md-6">
                    <h3>Already Eaten!</h3>
                    <div class="input-group">
                        {{#each burgers}}
                            {{#if this.devoured}}
                                <li class ="form-control" >
                                    {{this.id}}. {{this.burger}}
                                </li>
                                
                            {{/if}}
                        {{/each}}
                    </div>
            </div>

            </center>
        </div>